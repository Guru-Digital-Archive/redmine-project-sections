<%= error_messages_for('section') %>

<div class="box tabular">
  <p><%= f.text_field(:name, :required => true, :size => 60) %></p>
  <% if @sections.any? %>
    <p>
      <%= label(:project_section, :parent_id, l(:label_parent_project_section)) %>
      <%= parent_project_section_select_tag(@sections, @parent_section, :object => :project_section, :field => :parent_id) %>
    </p>
  <% end %>
  <p>
    <%= f.text_field(:identifier, :required => true, :size => 60, :disabled => !@section.new_record?) %>
    <% if @section.new_record? %>
      <em class="info"><%= l(:text_length_between, :min => 1, :max => Project::IDENTIFIER_MAX_LENGTH) %> <%= l(:text_project_identifier_info).html_safe %></em>
    <% end %>
  </p>
</div>
